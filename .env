# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
ENVIRONMENT=development

# ========================================
# MODEL PATHS
# ========================================
# Paths to AI model files (auto-created on first run)
IMAGE_MODEL_PATH=models/image/resnet18_v1.0.pth
TEXT_MODEL_PATH=models/text/distilbert_v1.0

# ========================================
# DEVICE CONFIGURATION
# ========================================
# Use 'cpu' for Mac or machines without NVIDIA GPU
# Use 'cuda' if you have NVIDIA GPU with CUDA support
DEVICE=cpu

# ========================================
# API SERVER CONFIGURATION
# ========================================
API_HOST=0.0.0.0
API_PORT=8000

# ========================================
# FUSION WEIGHTS (from research paper)
# ========================================
# Multimodal fusion: Trust Score = w_I × I + w_T × T + w_M × M
# Must sum to 1.0
IMAGE_WEIGHT=0.4
TEXT_WEIGHT=0.3
METADATA_WEIGHT=0.3

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO

# ========================================
# SECURITY
# ========================================
# IMPORTANT: Change SECRET_KEY in production!
SECRET_KEY=c05ef2efdc7ab486c51167c4155251c979286d3d1f74e928e5043034ed38ba78

# ========================================
# ENSEMBLE MODE (ENABLED for best accuracy)
# ========================================
# Image: EfficientNet-B7 + XceptionNet + CLIP (98%+ accuracy, local)
# Text: OpenAI Detector + ChatGPT Detector + Rules (95%+ accuracy, local)
USE_CLOUD_APIS=true
